<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jetgame.tetris.ui.stars.AnimatedStarsView
        android:id="@+id/stars_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:starsView_bigStarThreshold="20dp"
        app:starsView_maxStarSize="5dp"
        app:starsView_meteoritesColors="@array/star_colors"
        app:starsView_meteoritesEnabled="true"
        app:starsView_meteoritesInterval="5000"
        app:starsView_minStarSize="0.1dp"
        app:starsView_starColors="@array/star_colors"
        app:starsView_starCount="30" />

</FrameLayout>